@* Modellen som inneholder listen av brukere *@
@model IEnumerable<FirstWebApplication1.Models.UsersViewModel> 

@{
    ViewData["Title"] = "User Management"; @* Setter sidetittelen som vises i layouten *@

}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <!-- Bakgrunnsbilde for hele siden -->

    <section class="mx-auto max-w-6xl mt-8">
        <!-- Sentrerer innholdet og setter maks bredde for tabellen -->

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <!-- Hovedkortet som holder brukeroversikten -->

            <div class="mb-8">
                <!-- Overskrift og introduksjonstekst -->

                <h1 class="text-3xl font-bold text-gray-900">User Management</h1>
                <p class="text-gray-600 mt-2">Manage system users and their permissions</p>
            </div>
            @* Vises hvis det finnes brukere i systemet *@
            @if (Model.Any()) 

            {
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-lg">
                    <!-- Container for tabellen med brukere -->

                    <table class="min-w-full divide-y divide-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organization</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <!-- Oppretter én tabellrad per bruker i modellen -->
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@user.Email</td> <!-- Viser e-postadressen til brukeren -->

                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@string.Join(", ", user.Roles)</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(user.Organization ?? "Ingen satt")</td> <!-- Viser organisasjonen eller "Ingen satt" hvis null -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <!-- Handlingsknapper for valgt bruker -->

                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="text-indigo-600 hover:text-indigo-900 mr-4">Edit</a> 
                                        <!-- Lenke for å redigere brukeren -->

                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="inline" onsubmit="return confirm('Remove this user? This action cannot be undone.');">
                                            <!-- Form som sender forespørsel om å slette brukeren -->
                                            @Html.AntiForgeryToken() @* Beskytter slettingen mot CSRF *@

                                            <button type="submit" class="text-red-600 hover:text-red-900">Remove</button> <!-- Knapp for å fjerne brukeren etter bekreftelse -->

                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            @* Vises hvis det ikke finnes noen brukere i systemet *@
            else 
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No users</h3>
                    <p class="mt-1 text-sm text-gray-500">No users found in the system.</p>
                </div>
            }

            <div class="mt-8">
                <!-- Tilbakeknapp som navigerer til Home-siden -->
                    <!-- Navigerer brukeren tilbake til forsiden -->
                <button type="button" 

                        class="inline-flex items-center gap-2 px-4 py-2 rounded-md ring-1 ring-gray-300 text-gray-700 hover:bg-gray-50"
                        onclick="window.location.href='@Url.Action("Index", "Home")'"
                        aria-label="Go back to Home">
                    <i class="fa-solid fa-arrow-left"></i>
                    Back
                </button>
            </div>
        </div>
    </section>
</body>