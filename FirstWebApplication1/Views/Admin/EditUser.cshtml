@model FirstWebApplication1.Models.Admin.EditUserViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png');">
    <section class="mx-auto max-w-2xl mt-8">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Edit User Roles</h1>
                <p class="text-gray-600 mt-2">Manage roles for @Model.Email</p>
            </div>

            <form asp-action="EditUser" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Current Roles</label>
                    <div class="flex flex-wrap gap-2 mb-4">
                        @foreach (var role in Model.CurrentRoles)
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                @role
                            </span>
                        }
                        @if (!Model.CurrentRoles.Any())
                        {
                            <span class="text-sm text-gray-500">No roles assigned</span>
                        }
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Available Roles</label>
                    <div class="space-y-2">
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <div class="flex items-center">
                                <input type="checkbox"
                                       name="SelectedRoles"
                                       value="@role"
                                       @(Model.CurrentRoles.Contains(role) ? "checked" : "")
                                       class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                                <label class="ml-2 block text-sm text-gray-700">@role</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-6">
                    <a asp-action="Users"
                       class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-medium text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Cancel
                    </a>
                    <button type="submit"
                            class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </section>
</body>