@model FirstWebApplication1.Models.Admin.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <section class="mx-auto max-w-2xl mt-8">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Edit User</h1>
                <p class="text-gray-600 mt-2">Manage role and organization for @Model.Email</p>
            </div>

            <form asp-action="EditUser" asp-route-id="@Model.Id" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label for="selectedRole" class="block text-sm font-medium text-gray-700 mb-2">Role</label>
                        <select name="selectedRole" class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border">
                            <option value="" selected="@(string.IsNullOrEmpty(Model.SelectedRole))">(ingen)</option>
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <option value="@role" selected="@(Model.SelectedRole == role)">@role</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label for="organization" class="block text-sm font-medium text-gray-700 mb-2">Organization</label>
                        <select name="organization" class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border">
                            <option value="" selected="@(string.IsNullOrEmpty(Model.Organization))">(ingen)</option>
                            @foreach (var org in Model.AvailableOrganizations)
                            {
                                <option value="@org" selected="@(Model.Organization == org)">@org</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-6 border-t mt-8">
                    <a href="@Url.Action("Users", "Admin")"
                       class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-medium text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit"
                            class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </section>
</body>