@{
    ViewData["Title"] = "Pilot Map";
    @* Setter sidetittelen som brukes i layouten *@
}

<div id="pilot-map" style="width: 100%; height: 90vh;"></div>
<!-- Kartcontainer for pilotvisningen, fyller nesten hele skjermhøyden -->
<!-- Leaflet CSS -->
<!-- Stilark for Leaflet-kartbiblioteket -->
<link rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<!-- Leaflet JS -->
<!-- JavaScript-biblioteket som brukes til å vise og håndtere kart -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Floating button bottom-left -->
<!-- Flytende knapp nederst til venstre for å rapportere ny hindring -->
<a asp-controller="Obstacle" asp-action="SelectType"
   class="fixed bottom-6 left-6 bg-red-500 text-white px-24 py-10
       rounded-2xl shadow-2xl hover:bg-red-600 transition font-extrabold
       text-xl tracking-wide z-50"
   style="z-index: 9999">
    Report Obstacle
</a>

<!-- Our JS -->
<!-- Laster inn egendefinert kartlogikk for pilotvisningen -->
<script src="~/js/pilot-map.js"></script>
