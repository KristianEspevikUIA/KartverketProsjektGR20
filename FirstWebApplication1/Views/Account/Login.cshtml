@model FirstWebApplication1.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <section class="mx-auto max-w-md mt-8">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Sign in to your account</h1>
                <p class="mt-2 text-gray-600">Enter your credentials to access the system</p>
            </div>

            <form asp-action="Login" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                <div>
                    <label asp-for="Email" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-6 w-6 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                        <label asp-for="RememberMe" class="ml-2 block text-lg text-gray-700">Remember me</label>
                    </div>
                </div>

                <button type="submit"
                        class="w-full flex justify-center py-4 px-8 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Sign in
                </button>

                <div class="text-center">
                    <a asp-action="Register" class="font-medium text-indigo-600 text-lg hover:text-indigo-500">
                        Don't have an account? Register here
                    </a>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}