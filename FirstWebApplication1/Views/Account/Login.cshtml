@model FirstWebApplication1.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="bg-cover bg-center min-h-screen" style="background-image: url('/images/BackgroundImageGreen.png');">
    <section class="mx-auto w-full max-w-xl sm:max-w-2xl mt-10 px-5 sm:px-8">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-10 sm:p-12">
            <div class="text-center mb-10">
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900">Sign in to your account</h1>
                <p class="mt-3 text-gray-600 text-base sm:text-lg">Enter your credentials to access the system</p>
            </div>

            <form asp-action="Login" method="post" class="space-y-7">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                <div class="space-y-1">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Email"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-4 py-3"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div class="space-y-1">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-4 py-3"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-700">Remember me</label>
                    </div>
                </div>

                <button type="submit"
                        class="w-full flex justify-center py-3 px-6 border border-transparent rounded-xl shadow-sm text-base font-semibold text-white bg-indigo-700 hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Sign in
                </button>

                <div class="text-center">
                    <a asp-action="Register" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Don't have an account? Register here
                    </a>
                </div>
            </form>
        </div>
    </section>
</div>

<style>
    @@media (max-width: 800px) {
        section.mx-auto {
            max-width: 95vw;
        }

        section.mx-auto > div {
            padding: 2.75rem;
        }
    }
</style>

<style>
    @media (max-width: 800px) {
        .login-wrapper {
            max-width: 95vw;
        }

        .login-card {
            padding: 2.5rem;
        }

        .login-title {
            font-size: 2rem;
            line-height: 1.2;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
