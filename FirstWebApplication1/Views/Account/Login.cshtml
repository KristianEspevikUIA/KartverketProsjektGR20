@* Modellen som brukes til innlogging *@
@model FirstWebApplication1.Models.Account.LoginViewModel 


@{
    ViewData["Title"] = "Login"; @* Setter sidetittel som vises i layouten *@

}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <!-- Bakgrunnsbilde for hele siden -->

    <section class="mx-auto max-w-md mt-8">
        <!-- Sentrerer innholdet på midten av siden -->

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <!-- Hovedkortet som holder innloggingsskjemaet -->

            <div class="text-center mb-8">
                <!-- Overskrift og introduksjonstekst -->

                <h1 class="text-3xl font-bold text-gray-900">Sign in to your account</h1>
                <p class="mt-2 text-gray-600">Enter your credentials to access the system</p>
            </div>

            <form asp-action="Login" method="post" class="space-y-6">
                <!-- Form som sender innloggingsdata til Login-action -->
                @Html.AntiForgeryToken() @* Beskytter mot CSRF-angrep *@

                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div> <!-- Viser valideringsfeil for modellen -->


                <div>
                    <!-- Felt for e-postadresse -->

                    <label asp-for="Email" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis e-post ikke er gyldig -->

                </div>

                <div>
                    <!-- Felt for passord -->

                    <label asp-for="Password" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis passord ikke er gyldig -->

                </div>

                <div class="flex items-center justify-between">
                    <!-- Checkbox for å huske brukeren -->

                    <div class="flex items-center">
                        <input asp-for="RememberMe" class="h-6 w-6 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                        <label asp-for="RememberMe" class="ml-2 block text-lg text-gray-700">Remember me</label>
                    </div>
                </div>
                <!-- Knapp for å logge inn -->
                <button type="submit" 

                        class="w-full flex justify-center py-3 px-6 border border-transparent rounded-xl shadow-sm text-base font-semibold text-white bg-indigo-700 hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Sign in
                </button>

                <div class="text-center">
                    <a asp-action="Register" class="font-medium text-indigo-600 text-lg hover:text-indigo-500">
                        <!-- Lenke for registrering av ny bruker -->
                        Don't have an account? Register here
                    </a>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); @* Laster scripts for klient-validering *@

    }
}