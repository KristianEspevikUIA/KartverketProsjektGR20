@{
    ViewData["Title"] = "Access Denied";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <section class="mx-auto max-w-2xl mt-8 text-center">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-12">
            <div class="mx-auto w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
            </div>

            <h1 class="text-3xl font-bold text-gray-900 mb-4">Access Denied</h1>
            <p class="text-gray-600 text-lg mb-2">You don't have permission to access this resource.</p>
            <p class="text-gray-500 mb-8">If you believe this is an error, please contact your administrator.</p>

            <a asp-controller="Home" asp-action="Index"
               class="inline-flex items-center rounded-lg px-6 py-3 bg-indigo-600 text-white font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Return to Home Page
            </a>
        </div>
    </section>
</body>