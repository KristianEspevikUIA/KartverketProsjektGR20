@* Modellen som brukes for registreringsskjema *@
@model FirstWebApplication1.Models.Account.RegisterViewModel 


@{
    ViewData["Title"] = "Register"; @* Setter sidetittel som vises i layouten *@

}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <!-- Bakgrunnsbilde for hele siden -->

    <section class="mx-auto max-w-md mt-8">
        <!-- Sentrerer registreringsskjemaet på siden -->

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <!-- Hovedkortet som holder alt innholdet -->

            <div class="text-center mb-8">
                <!-- Overskrift og introduksjon for registrering -->

                <h1 class="text-3xl font-bold text-gray-900">Create your account</h1>
                <p class="mt-2 text-gray-600">Join the NRL Registration System</p>
            </div>

            <form asp-action="Register" method="post" class="space-y-6">
                <!-- Form som sender registreringsdata til Register-action -->
                @Html.AntiForgeryToken() @* Beskytter mot CSRF-angrep *@

                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div> <!-- Viser feilmeldinger for hele modellen -->


                <div>
                    <!-- Felt for e-postadresse -->

                    <label asp-for="Email" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis e-post ikke er gyldig -->

                </div>

                <div>
                    <!-- Felt for passord -->

                    <label asp-for="Password" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" type="password"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis passord ikke er gyldig -->

                </div>

                <div>
                    <!-- Felt for bekreftelse av passord -->

                    <label asp-for="ConfirmPassword" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border"
                           placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis passordene ikke matcher -->

                </div>

                <div>
                    <!-- Felt for valg av brukerrolle -->

                    <label asp-for="Role" class="block text-lg font-medium text-gray-700 mb-1"></label>
                    <select asp-for="Role"
                            class="w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2 border">
                        <option value="">Select a role</option>
                        <option value="Pilot">Pilot</option>
                        <option value="Caseworker">Caseworker</option>
                        
                    </select>
                    <span asp-validation-for="Role" class="text-red-600 text-sm"></span> <!-- Feilmelding hvis rolle ikke er valgt -->

                </div>
                <!-- Knapp for å sende inn registreringsskjema -->

                <button type="submit"
                        class="w-full flex justify-center py-3 px-6 border border-transparent rounded-xl shadow-sm text-base font-semibold text-white bg-indigo-700 hover:bg-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Create account
                </button>

                <div class="text-center">
                    <a asp-action="Login" class="font-medium text-lg text-indigo-600 hover:text-indigo-500">
                        <!-- Lenke for brukere som allerede har en konto -->
                        Already have an account? Sign in here
                    </a>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); @* Laster scripts for klient-validering *@

    }
}