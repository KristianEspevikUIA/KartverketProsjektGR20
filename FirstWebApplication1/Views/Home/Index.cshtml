@model string

@{
    ViewData["Title"] = "Home Page";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png');">
    <section class="mx-auto max-w-3xl mt-8">
        <div class="text-center space-y-6">
            <h1 class="text-3xl sm:text-4xl font-bold tracking-tight">
                Welcome to NRL Registration System
            </h1>

            <!-- here is the image -->
            <img src="~/images/standard_kartverket.png"
                 alt="kartverket logo"
                 class="mx-auto w-96 h-auto rounded-lg" />

            @if (!string.IsNullOrWhiteSpace(Model))
            {
                <p class="text-gray-800">@Model</p>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <div class="flex justify-center space-x-4">
                    <a asp-action="SelectType" asp-controller="Obstacle"
                       class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-indigo-600 text-indigo-700 hover:bg-indigo-50">
                        Report New Obstacle
                    </a>
                    <a asp-action="List" asp-controller="Obstacle"
                       class="inline-flex items-center rounded-lg px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-700">
                        View All Obstacles
                    </a>
                </div>

                <!-- Role-based quick actions -->
                <div class="mt-6 p-4 bg-white rounded-lg shadow-sm">
                    <h3 class="text-lg font-semibold mb-3">Quick Actions</h3>
                    <div class="flex flex-wrap justify-center gap-2">
                        @if (User.IsInRole("Pilot"))
                        {
                            <a asp-controller="Pilot" asp-action="Map"
                               class="inline-flex items-center px-3 py-1 bg-green-600 text-white rounded-full text-sm hover:bg-green-700">
                                Pilot Map
                            </a>
                        }
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Users"
                               class="inline-flex items-center px-4 py-2 bg-purple-300 text-black rounded-full text-sm hover:bg-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-300">
                                Manage Users
                            </a>
                            <a asp-controller="Organizations" asp-action="OrganizationView"
                               class="inline-flex items-center px-4 py-2 bg-yellow-300 text-black rounded-full text-sm hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-yellow-300">
                                Manage Organizations
                            </a>
      
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Caseworker"))
                        {
                            <a asp-controller="Obstacle" asp-action="List" asp-route-statusFilter="Pending"
                               class="inline-flex items-center px-3 py-1 bg-yellow-400 text-black rounded-full text-sm hover:bg-yellow-500">
                                Review Pending Obstacles
                            </a>
                            <a asp-controller="Obstacle" asp-action="List" asp-route-statusFilter="Approved"
                               class="inline-flex items-center px-3 py-1 bg-green-300 text-black rounded-full text-sm hover:bg-green-400">
                                View Approved Obstacles
                            </a>
                            <a asp-controller="Obstacle" asp-action="List" asp-route-statusFilter="Declined"
                               class="inline-flex items-center px-3 py-1 bg-red-300 text-black rounded-full text-sm hover:bg-red-400">
                                View Rejected Obstacles
                            </a>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="space-y-4">
                    <p class="text-gray-600">Please log in to access the obstacle reporting system.</p>
                    <div class="flex justify-center space-x-4">
                        <a asp-controller="Account" asp-action="Login"
                           class="inline-flex items-center rounded-lg px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-700">
                            Login
                        </a>
                        <a asp-controller="Account" asp-action="Register"
                           class="inline-flex items-center rounded-lg px-4 py-2 ring-1 ring-indigo-600 text-indigo-700 hover:bg-indigo-50">
                            Register
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
</body>