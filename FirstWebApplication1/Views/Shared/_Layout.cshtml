<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe 20 KartverketProject </title>

    <!-- TailwindCSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstWebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
        <header class="bg-gray-100 shadow">
            <div class="container mx-auto flex items-center space-x-6 p-4">
                <!-- Prosjektnavn -->
                <a asp-controller="Home" asp-action="Index" class="font-bold text-gray-800">
                    Gruppe 20 KartverketProject
                </a>

                <!-- Lenker -->
                <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-indigo-600">
                    Home
                </a>
                <a asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-indigo-600">
                    Privacy
                </a>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Gruppe 20 KartverkeProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
