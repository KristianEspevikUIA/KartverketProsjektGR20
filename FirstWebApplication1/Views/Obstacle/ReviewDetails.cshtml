@model FirstWebApplication1.Models.ObstacleData
@{
    ViewData["Title"] = "Review Obstacle Details";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <section class="mx-auto max-w-lg pb-12">
        <div class="bg-white rounded-2xl shadow-sm p-6">
            <header class="mb-6 text-center">
                <h1 class="text-2xl font-semibold">Review Obstacle Details</h1>
                <p class="text-gray-600">Verify the details below before submission:</p>
            </header>

            <dl class="text-sm text-gray-800 space-y-4">
                <dt>Type:</dt>
                <dd>@Model.ObstacleType</dd>

                <dt>Name:</dt>
                <dd>@Model.ObstacleName</dd>

                <dt>Height:</dt>
                <dd>@Model.ObstacleHeight meters</dd>

                <dt>Description:</dt>
                <dd>@Model.ObstacleDescription</dd>

                <dt>Location:</dt>
                <dd>Lat: @Model.Latitude, Lng: @Model.Longitude</dd>
            </dl>

            <form asp-action="SubmitObstacle" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white rounded-lg px-4 py-2">Submit</button>
            </form>
        </div>
    </section>
</body>