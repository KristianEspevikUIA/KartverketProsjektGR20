@model FirstWebApplication1.Models.ObstacleData
@* Viewet bruker ObstacleData-modellen for å vise hindringsinformasjon før innsending *@

@{
    ViewData["Title"] = "Review Obstacle Details";
    @* Setter sidetittel som brukes av layouten *@
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <!-- Setter bakgrunnsbilde og sørger for at det dekker hele visningsområdet -->

    <section class="mx-auto max-w-lg pb-12">
        <!-- Sentralisert hovedseksjon med maks bredde for gjennomgangsskjemaet -->

        <div class="bg-white rounded-2xl shadow-sm p-6">
            <!-- Kort/container som inneholder overskrift, detaljer og innsending -->

            <header class="mb-6 text-center">
                <!-- Toppseksjon med tittel og kort instruksjon til brukeren -->
                <h1 class="text-2xl font-semibold">Review Obstacle Details</h1>
                <p class="text-gray-600">Verify the details below before submission:</p>
            </header>

            <dl class="text-sm text-gray-800 space-y-4">
                <!-- Viser oppsummering av alle registrerte verdier før endelig innsending -->

                <dt>Type:</dt>
                <dd>@Model.ObstacleType</dd>

                <dt>Name:</dt>
                <dd>@Model.ObstacleName</dd>

                <dt>Height:</dt>
                <dd>@Model.ObstacleHeight meters</dd>

                <dt>Description:</dt>
                <dd>@Model.ObstacleDescription</dd>

                <dt>Location:</dt>
                <dd>Lat: @Model.Latitude, Lng: @Model.Longitude</dd>
            </dl>

            <form asp-action="SubmitObstacle" method="post">
                @Html.AntiForgeryToken()
                @* Skjema som sender inn hindringen endelig til SubmitObstacle-aksjonen med CSRF-beskyttelse *@

                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white rounded-lg px-4 py-2">
                    Submit
                </button>
                <!-- Knapp for å bekrefte og sende inn hindringsrapporten -->
            </form>
        </div>
    </section>
</body>
