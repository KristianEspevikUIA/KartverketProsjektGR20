@using System.Globalization
@* Importerer System.Globalization for å kunne formatere tall/koordinater med riktig kultur *@

@model FirstWebApplication1.Models.ObstacleData
@* Viewet bruker ObstacleData-modellen som inneholder informasjon om den registrerte hindringen *@

@{
    ViewData["Title"] = "Obstacle Registered";
    @* Setter sidetittelen som vises i layouten *@

    var vertices = Model.LineCoordinates;
    @* Lagrer alle verteks-punkter dersom hindringen er en linje *@

    var start = Model.StartCoordinate;
    var end = Model.EndCoordinate;
    @* Start- og sluttkoordinat for linjehindringer (null for punkt) *@

    var hasLine = Model.HasLine;
    @* Indikerer om geometrien er linje (true) eller punkt (false) *@

    var lineLength = Model.LineLengthMeters;
    @* Linjelengde i meter dersom hindringen består av en linje *@

    var fallbackLat = start?.Latitude ?? Model.Latitude ?? 59.91;
    var fallbackLng = start?.Longitude ?? Model.Longitude ?? 10.75;
    @* Fallback-koordinater som brukes til å sentrere kartet hvis mer spesifikke verdier mangler *@

    var usesFeet = ViewBag.UsesFeet ?? false;
    @* Angir om høyden skal vises i fot (true) eller meter (false) basert på bruker/konfigurasjon *@

    var heightDisplay = usesFeet
        ? $"{Model.ObstacleHeightInFeet:F1} feet ({Model.ObstacleHeight:F1} meters)"
        : $"{Model.ObstacleHeight:F1} meters";
    @* Forbereder ferdigformatert tekst for høydevisning, avhengig av om fot brukes eller ikke *@
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <!-- Setter helsidebakgrunn med tilpasset bilde og full dekning -->

    <section class="mx-auto max-w-6xl px-4 mb-16">
        <!-- Hovedseksjon som sentrerer og begrenser bredden på innholdet -->

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8 space-y-6">
            <!-- Kort/container som inneholder hele bekreftelsessiden -->

            <header class="text-center border-b pb-6">
                <!-- Toppseksjon med ikon, tittel og introduksjonstekst -->

                <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                    <i class="fa-solid fa-check text-3xl text-green-600"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">Obstacle Registered Successfully!</h1>
                <p class="text-gray-600 mt-2">Thank you for submitting this obstacle report</p>
            </header>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Grid-oppsett: venstre kolonne for detaljer, høyre kolonne for kart og koordinater -->
                <!-- Left Column: Details -->
                <!-- Venstre kolonne: detaljinformasjon om hindringen -->
                <div class="space-y-6">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <i class="fa-solid fa-info-circle mr-2 text-indigo-600"></i>
                            Obstacle Information
                        </h2>

                        <dl class="grid grid-cols-1 gap-4">
                            <div class="bg-gray-50 p-4 rounded-lg">
                                <dt class="text-sm font-medium text-gray-600">Obstacle Type</dt>
                                <dd class="mt-1 text-lg font-semibold text-gray-900">
                                    <i class="fa-solid fa-tag mr-2 text-indigo-600"></i>
                                    @Html.DisplayFor(m => m.ObstacleType)
                                    @* Viser typen hindring (kategori) med DisplayFor for å følge displayformatregler *@
                                </dd>
                            </div>

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <dt class="text-sm font-medium text-gray-600">Height</dt>
                                <dd class="mt-1 text-lg font-semibold text-gray-900">
                                    @heightDisplay
                                    @* Viser høyden i fot og meter, eller kun meter, basert på heightDisplay-strengen *@
                                </dd>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.ObstacleDescription))
                            {
                                <div class="bg-gray-50 p-4 rounded-lg">
                                    <dt class="text-sm font-medium text-gray-600">Description</dt>
                                    <dd class="mt-1 text-base text-gray-900 whitespace-pre-wrap w-96 break-words">
                                        @Html.DisplayFor(m => m.ObstacleDescription)
                                        @* Viser eventuell beskrivelse av hindringen med linjeskift bevart *@
                                    </dd>
                                </div>
                            }

                            <div class="bg-gray-50 p-4 rounded-lg">
                                <dt class="text-sm font-medium text-gray-600">Status</dt>
                                <dd class="mt-1">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                                        <i class="fa-solid fa-clock mr-2"></i>
                                        Pending Review
                                    </span>
                                    @* Statusmerke som viser at hindringen venter på vurdering *@
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Right Column: Map & Coordinates -->
                <!-- Høyre kolonne: kart og detaljerte koordinater/geometriinformasjon -->
                <div class="space-y-6">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
                            <i class="fa-solid fa-map-marked-alt mr-2 text-indigo-600"></i>
                            Location Details
                        </h2>

                        <div id="map" class="rounded-lg border-2 border-gray-200 shadow-sm" style="height: 400px;"></div>
                        <!-- Leaflet-kartcontainer hvor hindringens posisjon/linje vises -->

                        <pre id="line-geojson-data" class="hidden">@Model.LineGeoJson</pre>
                        <!-- Skjult element som inneholder GeoJSON-representasjon av linjegeometrien -->
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg">
                        @if (!hasLine && Model.Latitude.HasValue && Model.Longitude.HasValue)
                        {
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">Latitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @Model.Latitude.Value.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">Longitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @Model.Longitude.Value.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                            </div>
                            @* Viser punktkoordinater dersom hindringen er et punkt med gyldige lat/long *@
                        }

                        @if (start is not null)
                        {
                            <div class="grid grid-cols-2 gap-4 mb-3">
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">Start Latitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @start.Latitude.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">Start Longitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @start.Longitude.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                            </div>
                            @* Viser startkoordinat for linjegeometrien dersom tilgjengelig *@
                        }

                        @if (end is not null)
                        {
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">End Latitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @end.Latitude.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                                <div>
                                    <dt class="text-xs font-medium text-gray-600">End Longitude</dt>
                                    <dd class="mt-1 text-sm font-mono text-gray-900">
                                        @end.Longitude.ToString("F6", CultureInfo.InvariantCulture)
                                    </dd>
                                </div>
                            </div>
                            @* Viser sluttkoordinat for linjegeometrien dersom tilgjengelig *@
                        }

                        @if (Model.LineVertexCount > 0)
                        {
                            <div class="mt-4 pt-4 border-t">
                                <span class="inline-flex items-center text-sm text-gray-700">
                                    <i class="fa-solid fa-map-pin mr-2 text-indigo-600"></i>
                                    <strong>Vertices:</strong>&nbsp;@Model.LineVertexCount
                                </span>
                                @* Viser hvor mange verteks-punkter linjen består av *@
                            </div>
                        }

                        @if (lineLength.HasValue)
                        {
                            var meters = lineLength.Value;
                            var formatted = meters >= 1000
                            ? $"{meters / 1000:0.00} km"
                            : $"{meters:0.0} m";
                            @* Formatterer linjelengden som meter eller kilometer avhengig av total lengde *@

                            <div class="mt-2">
                                <span class="inline-flex items-center text-sm text-gray-700">
                                    <i class="fa-solid fa-ruler mr-2 text-indigo-600"></i>
                                    <strong>Line Length:</strong>&nbsp;@formatted
                                </span>
                            </div>
                        }
                    </div>

                    @if (vertices != null && vertices.Count > 0)
                    {
                        <details class="bg-gray-50 p-4 rounded-lg">
                            <summary class="cursor-pointer font-medium text-gray-900 hover:text-indigo-600">
                                <i class="fa-solid fa-list mr-2"></i>
                                View All Vertices (@vertices.Count points)
                            </summary>
                            <!-- Utvidbar seksjon som viser alle verteks-punkter i tabellform -->

                            <div class="mt-4 overflow-x-auto rounded-lg border border-gray-200">
                                <table class="min-w-full text-left text-sm">
                                    <thead class="bg-gray-100 text-gray-600">
                                        <tr>
                                            <th class="px-3 py-2">#</th>
                                            <th class="px-3 py-2">Latitude</th>
                                            <th class="px-3 py-2">Longitude</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < vertices.Count; i++)
                                        {
                                            <tr class="border-b last:border-0 @(i % 2 == 0 ? "bg-white" : "bg-gray-50")">
                                                <td class="px-3 py-2 text-gray-700">@(i + 1)</td>
                                                <td class="px-3 py-2 font-mono text-gray-900">
                                                    @vertices[i].Latitude.ToString("F6", CultureInfo.InvariantCulture)
                                                </td>
                                                <td class="px-3 py-2 font-mono text-gray-900">
                                                    @vertices[i].Longitude.ToString("F6", CultureInfo.InvariantCulture)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </details>
                    }
                </div>
            </div>

            <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-8 border-t">
                <!-- Navigasjonsknapper for å gå tilbake til hjem eller se alle hindringer -->

                <a asp-controller="Home" asp-action="Index"
                   class="w-full sm:w-auto inline-flex items-center justify-center rounded-lg px-12 py-6 bg-white text-gray-700 text-lg ring-1 ring-gray-300 hover:bg-gray-50 font-medium">
                    <i class="fa-solid fa-home mr-2"></i>
                    Back to Home
                </a>
                <a asp-controller="Obstacle" asp-action="List"
                   class="w-full sm:w-auto inline-flex items-center justify-center rounded-lg px-12 py-6 bg-indigo-600 text-white text-lg hover:bg-indigo-700 font-medium">
                    <i class="fa-solid fa-list mr-2"></i>
                    View All Obstacles
                </a>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        const fallbackLat = "@fallbackLat.ToString(CultureInfo.InvariantCulture)";
        const fallbackLng = "@fallbackLng.ToString(CultureInfo.InvariantCulture)";

        // Gjør all streng-/boolsk behandling i C# på server, slik at JS kun mottar "true" / "false"
        const hasPointGeometry = @((!hasLine && Model.Latitude.HasValue && Model.Longitude.HasValue).ToString().ToLowerInvariant());

        const map = L.map('map').setView(
            [parseFloat(fallbackLat), parseFloat(fallbackLng)],
            14
        );

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        const lineGeoJsonElement = document.getElementById('line-geojson-data');
        const rawLineGeoJson = lineGeoJsonElement?.textContent?.trim();
        let lineGeoJson = null;

        if (rawLineGeoJson) {
            try {
                lineGeoJson = JSON.parse(rawLineGeoJson);
            } catch (err) {
                console.error('Could not parse obstacle line GeoJSON', err);
            }
        }

        if (lineGeoJson && lineGeoJson.type === 'LineString' && Array.isArray(lineGeoJson.coordinates)) {
            const latLngs = lineGeoJson.coordinates
                .filter(coord => Array.isArray(coord) && coord.length >= 2)
                .map(coord => [coord[1], coord[0]]);

            if (latLngs.length > 0) {
                const polyline = L.polyline(latLngs, { color: '#4f46e5', weight: 4 }).addTo(map);

                latLngs.forEach((point, index) => {
                    L.circleMarker(point, {
                        radius: 6,
                        color: '#4f46e5',
                        fillColor: '#818cf8',
                        fillOpacity: 0.9,
                        weight: 2
                    }).addTo(map).bindPopup(`Point ${index + 1}`);
                });

                if (latLngs.length > 1) {
                    map.fitBounds(polyline.getBounds(), { padding: [20, 20] });
                } else {
                    map.setView(latLngs[0], 14);
                }
            }
        } else if (hasPointGeometry) {
            L.marker([parseFloat(fallbackLat), parseFloat(fallbackLng)]).addTo(map)
                .bindPopup("@Model.ObstacleName").openPopup();
        }

        // Justerer kartstørrelsen når siden er ferdig med layout, slik at kartet vises riktig
        setTimeout(() => {
            map.invalidateSize();
        }, 100);
    </script>
}
