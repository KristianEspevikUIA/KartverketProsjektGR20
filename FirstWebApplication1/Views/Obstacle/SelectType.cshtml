@model FirstWebApplication1.Models.ObstacleTypeViewModel

@{
    ViewData["Title"] = "Select Obstacle Type";
}

<body class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">
    <section class="mx-auto max-w-6xl mt-8 px-4 pb-12">
        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <header class="mb-8 text-center">
                <h1 class="text-3xl font-semibold text-gray-900">Register New Obstacle</h1>
            </header>

            <form asp-action="SelectType" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-6"></div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                    @foreach (var type in FirstWebApplication1.Models.ObstacleTypes.Types)
                    {
                        <label class="relative cursor-pointer">
                            <input type="radio"
                                   name="SelectedType"
                                   value="@type.Value"
                                   class="peer sr-only"
                                   required />

                            <div class="h-full p-6 bg-white border-2 border-gray-200 rounded-xl hover:border-indigo-300 hover:shadow-md transition-all peer-checked:border-indigo-600 peer-checked:bg-indigo-50 peer-checked:shadow-lg">
                                <div class="flex flex-col items-center text-center space-y-4">
                                    <div class="w-20 h-20 flex items-center justify-center bg-indigo-100 rounded-full peer-checked:bg-indigo-600 transition-colors">
                                        <i class="@type.Icon text-4xl text-indigo-600 peer-checked:text-white"></i>
                                    </div>

                                    <div>
                                        <h3 class="text-xl font-semibold text-gray-900 mb-2">@type.DisplayName</h3>
                                        <p class="text-sm text-gray-600">@type.Description</p>
                                    </div>

                                    <div class="absolute top-4 right-4 opacity-0 peer-checked:opacity-100 transition-opacity">
                                        <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center">
                                            <i class="fa-solid fa-check text-white"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </label>
                    }
                </div>

                <span asp-validation-for="SelectedType" class="text-red-600 text-sm block mb-4"></span>

                <div class="flex justify-between items-center pt-6 border-t">
                    <a asp-controller="Home" asp-action="Index"
                       class="inline-flex items-center rounded-lg px-6 py-3 bg-white text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50 font-medium">
                        <i class="fa-solid fa-arrow-left mr-2"></i>
                        Cancel
                    </a>

                    <button type="submit"
                            class="inline-flex items-center rounded-lg px-6 py-3 bg-indigo-600 text-white font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Continue to Details
                        <i class="fa-solid fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}