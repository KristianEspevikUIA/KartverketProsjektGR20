@model FirstWebApplication1.Models.ObstacleData

@{
    ViewData["Title"] = "Register Obstacle";
    var usesFeet = ViewBag.UsesFeet ?? false;
    var isPilot = ViewBag.IsPilot ?? false;

    // Beregner høydeintervaller i begge enheter (meter og fot)
    var minHeightMeters = 15.0;
    var maxHeightMeters = 300.0;
    var minHeightFeet = minHeightMeters * 3.28084; // ~49 fot
    var maxHeightFeet = maxHeightMeters * 3.28084; // ~984 fot
    var defaultHeightMeters = 15.0;
    var defaultHeightFeet = defaultHeightMeters * 3.28084; // ~49 fot
}

<div class="bg-cover bg-center" style="background-image: url('/images/BackgroundImageGreen.png'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%;">

    <section class="mx-auto max-w-6xl px-4 pb-12">

        <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-8">
            <!-- Hovedkortet som inneholder hele skjemaet for hindringer -->

            <header class="mb-4 text-center">
                <h1 class="text-3xl font-semibold text-gray-900">Register Obstacle</h1>
                
                @if (!string.IsNullOrEmpty(Model.ObstacleType))
                {
                    <div class="mt-4 inline-flex items-center px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full">
                        <i class="fa-solid fa-tag mr-2"></i>
                        <span class="font-medium">Type: @Model.ObstacleType</span>
                    </div>
                    <!-- Viser valgt hindringstype hvis den finnes i modellen -->
                }
            </header>

            <form asp-action="DataForm" method="post" class="space-y-6" id="obstacleForm">
                @Html.AntiForgeryToken()        @* Beskytter skjemaet mot CSRF-angrep *@
                @Html.HiddenFor(m => m.ObstacleType)       @* Skjult felt som sender valgt hindringstype tilbake *@

                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-50 p-4 rounded-lg"></div>
                <!-- Oppsummerer valideringsfeil for modellen -->

                <div class="space-y-8">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-800 mb-1">
                                <i class="fa-solid fa-map-marked-alt mr-2 text-indigo-600"></i>
                                Location <span class="text-red-600">*</span>
                            </label>
                            <p class="text-sm text-gray-600 mb-3">
                                Click on the map to mark a single point, or click multiple times to draw a line representing the obstacle.
                            </p>
                        </div>

                        <div id="map"
                             style="height: 600px; border: 2px solid #e5e7eb;"
                             class="rounded-lg shadow-sm"
                             data-approved-obstacles='@(ViewBag.ApprovedObstaclesJson ?? "[]")'>
                        </div>
                        <!-- Leaflet-kart som viser området og lar brukeren velge punkt/linje, inkludert godkjente hindringer fra ViewBag -->

                        <div class="flex flex-wrap gap-3">
                            <button type="button" id="undoPoint"
                                    class="inline-flex items-center justify-center rounded-lg bg-gray-100 px-8 py-4 text-sm font-medium text-gray-800 hover:bg-gray-200 transition-colors">
                                <i class="fa-solid fa-undo mr-2"></i>
                                Undo Last Point
                            </button>

                            <button type="button" id="clearLine"
                                    class="inline-flex items-center justify-center rounded-lg bg-gray-100 px-8 py-4 text-sm font-medium text-gray-800 hover:bg-gray-200 transition-colors">
                                <i class="fa-solid fa-trash mr-2"></i>
                                Clear All
                            </button>
                        </div>

                        <!-- HØYDESLIDER MED ENHETSBYTTING -->
                        <div class="bg-gradient-to-br from-indigo-50 to-purple-50 p-3 rounded-xl border-2 border-indigo-200">
                            <div class="flex justify-between items-center mb-1">
                                <label class="block text-sm font-medium text-gray-800">
                                    <i class="fa-solid fa-ruler-vertical mr-2 text-indigo-600"></i>
                                    Obstacle Height <span class="text-red-600">*</span>
                                </label>
                                @if (isPilot)
                                {
                                    <div class="flex items-center space-x-2 bg-white px-3 py-1 rounded-full shadow-sm">
                                        <span class="text-xs font-medium text-gray-600">Unit:</span>
                                        <button type="button" id="unitToggle" class="text-sm font-semibold text-indigo-600 hover:text-indigo-800 focus:outline-none">
                                            <span id="currentUnit">Feet</span>
                                            <i class="fa-solid fa-exchange-alt ml-1 text-xs"></i>
                                        </button>
                                    </div>
                                    <!-- Piloter kan bytte visningsenhet mellom fot og meter -->
                                }
                                else
                                {
                                    <span class="text-xs font-medium text-gray-600 bg-white px-3 py-1 rounded-full shadow-sm">
                                        Unit: Meters
                                    </span>
                                }
                            </div>

                            <!-- Synlig numerisk felt som viser høyden i valgt enhet -->
                            <div class="flex justify-center mb-4">
                                <input id="heightInputDisplay"
                                       type="number"
                                       class="text-center text-2xl font-bold text-indigo-600 border border-indigo-300 rounded-lg bg-white px-4 py-1 focus:outline-none focus:ring-2 focus:ring-indigo-400 w-28"
                                       value="@(usesFeet? defaultHeightFeet.ToString("F0") : defaultHeightMeters.ToString("F1"))" />
                            </div>
                            
                            
                            <!-- Synlig slider som brukeren kan dra for å justere høyden -->
                            <input type="range"
                                   id="heightSlider"
                                   min="@(usesFeet? minHeightFeet.ToString("F0") : minHeightMeters)"
                                   max="@(usesFeet? maxHeightFeet.ToString("F0") : maxHeightMeters)"
                                   step="@(usesFeet ? "1" : "0.5")"
                                   value="@(usesFeet? defaultHeightFeet.ToString("F0") : defaultHeightMeters)"
                                   data-unit="@(usesFeet ? "feet" : "meters")"
                                   class="w-full h-2 bg-indigo-200 rounded-lg appearance-none cursor-pointer slider" />

                            <!-- Skjult felt som lagrer selve høydeverdien i meter (uten step-attributt) -->
                            <input type="hidden" asp-for="ObstacleHeight" id="ObstacleHeight" />

                            <div class="flex justify-between text-xs text-gray-600 mt-2">
                                <span id="minLabel">@(usesFeet ? $"{minHeightFeet:F0} ft" : $"{minHeightMeters:F0} m") (Min)</span>
                                <span id="maxLabel">@(usesFeet ? $"{maxHeightFeet:F0} ft" : $"{maxHeightMeters:F0} m") (Max)</span>
                            </div>

                            <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600 block mt-2"></span>  <!-- Viser valideringsfeil knyttet til høydefeltet -->
                            @if (isPilot)
                            {
                                <div class="mt-3 text-xs text-gray-500 text-center">
                                    <i class="fa-solid fa-info-circle mr-1"></i>
                                    Value stored in meters:
                                    <span id="feetValue" class="font-mono font-semibold">@defaultHeightMeters.ToString("F2")</span> m
                                </div>
                            }
                        </div>

                        <div>
                            <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-2">
                                <i class="fa-solid fa-file-alt mr-2 text-gray-600"></i>
                                Obstacle Description <span class="text-gray-500 text-xs">(Optional)</span>
                            </label>
                            <textarea asp-for="ObstacleDescription" rows="3" maxlength="300"
                                      class="block w-full rounded-lg border-2 border-gray-400 focus:border-indigo-600 focus:ring-2 focus:ring-indigo-200 px-4 py-3 text-lg shadow-sm"
                                      placeholder="Add additional details about the obstacle (optional)"></textarea>

                            <div class="text-xs text-gray-500 mt-1">
                                <span id="descCount">0</span>/300 characters
                            </div>

                            <span asp-validation-for="ObstacleDescription" class="text-sm text-red-600"></span>   <!-- Viser valideringsfeil for beskrivelsen -->
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Latitude" class="block text-xs font-medium text-gray-600 mb-1">Latitude</label>
                            <input asp-for="Latitude" readonly
                                   class="block w-full rounded-lg border-gray-300 bg-gray-50 px-3 py-2 text-sm text-gray-800 font-mono" />
                            <span asp-validation-for="Latitude" class="text-xs text-red-600"></span>
                            <!-- Viser breddegrad (leses fra kartet, ikke redigerbar) -->
                        </div>
                        
                        <div>
                            <label asp-for="Longitude" class="block text-xs font-medium text-gray-600 mb-1">Longitude</label>
                            <input asp-for="Longitude" readonly
                                   class="block w-full rounded-lg border-gray-300 bg-gray-50 px-3 py-2 text-sm text-gray-800 font-mono" />
                            <span asp-validation-for="Longitude" class="text-xs text-red-600"></span>
                            <!-- Viser lengdegrad (leses fra kartet, ikke redigerbar) -->
                        </div>
                    </div>

                    <div id="lineSummary" class="text-sm font-medium text-gray-700 bg-gray-50 p-3 rounded-lg"></div>
                    <!-- Tekstlig oppsummering av linjen (f.eks. antall punkter eller lengde) -->

                    <div id="vertexList" class="rounded-lg border border-gray-200 bg-gray-50 p-3 text-sm max-h-48 overflow-y-auto"></div>
                    <!-- Viser en liste over alle punktene (koordinater) i linjen -->

                    <input asp-for="LineGeoJson" type="hidden" />
                    <span asp-validation-for="LineGeoJson" class="text-sm text-red-600"></span>
                    <!-- Skjult felt for GeoJSON-representasjon av linjen + validering -->
                </div>

                <div class="flex justify-between items-center pt-8 border-t">
                    <a asp-action="SelectType"
                       class="inline-flex items-center rounded-lg px-12 py-6 text-2xl bg-white text-gray-700 ring-1 ring-gray-300 hover:bg-gray-50 font-medium transition-colors">
                        <i class="fa-solid fa-arrow-left mr-2"></i>
                        Back
                    </a>

                    <button type="submit" id="submitBtn"
                            class="inline-flex items-center justify-center rounded-xl bg-indigo-600 px-12 py-6 text-2xl font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed transition-all"
                            disabled>
                        Submit
                        <i class="fa-solid fa-arrow-right ml-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Inkluderer standard klientsidevalideringsscript fra ASP.NET -->

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <!-- Leaflet-biblioteket for kartvisning -->

    <script src="~/js/geolocation.js?v=1.2"></script>
    <!-- Egendefinert JavaScript for kart og geolokasjon -->

    <script>
        // Konstanter for omregning mellom meter og fot, samt min/max grenser
        const METERS_TO_FEET = 3.28084;
        const FEET_TO_METERS = 1 / METERS_TO_FEET;
        const MIN_METERS = 15;
        const MAX_METERS = 300;
        const MIN_FEET = MIN_METERS * METERS_TO_FEET;
        const MAX_FEET = MAX_METERS * METERS_TO_FEET;

        // Startenhet fra backend (avgjør om slideren starter i meter eller fot)
        let currentUnit = '@(usesFeet ? "feet" : "meters")';
        const isPilot = @isPilot.ToString().ToLower();

        // Henter HTML-elementene som brukes til høydevalg
        const heightSlider = document.getElementById('heightSlider');
        const heightInputDisplay = document.getElementById('heightInputDisplay'); // Synlig numerisk inputfelt
        const heightInput = document.getElementById('ObstacleHeight'); // Skjult felt (lagrer alltid meter)
        const unitToggle = document.getElementById('unitToggle');
        const currentUnitSpan = document.getElementById('currentUnit');
        const minLabel = document.getElementById('minLabel');
        const maxLabel = document.getElementById('maxLabel');
        const metersValueSpan = document.getElementById('feetValue'); // Riktig ID for elementet som viser meterverdi

        // Oppdater visningen basert på sliderens verdi
        function updateHeightDisplay() {
            let sliderValue = parseFloat(heightSlider.value);
            let metersValue;

            if (currentUnit === 'feet') {
                sliderValue = Math.round(sliderValue);
                heightInputDisplay.value = sliderValue.toFixed(0);
                metersValue = sliderValue * FEET_TO_METERS;
            } else {
                heightInputDisplay.value = sliderValue.toFixed(1);
                metersValue = sliderValue;
            }

            // Lagrer alltid verdien i meter i det skjulte feltet
            heightInput.value = metersValue.toFixed(2);

            // Viser lagret verdi i meter (spesielt nyttig for piloter)
            if (metersValueSpan && isPilot) {
                metersValueSpan.textContent = metersValue.toFixed(2);
            }
        }

        // Manuell inntasting i inputfelt → oppdater slider og skjult felt
        heightInputDisplay.addEventListener('input', () => {
            let typedValue = parseFloat(heightInputDisplay.value);
            if (isNaN(typedValue)) return;

            if (currentUnit === 'feet') {
                // Sørger for at verdien holder seg innenfor gyldig intervall i fot
                typedValue = Math.min(Math.max(typedValue, MIN_FEET), MAX_FEET);
                heightSlider.value = typedValue;
                heightInput.value = (typedValue * FEET_TO_METERS).toFixed(2);

                if (metersValueSpan && isPilot) {
                    metersValueSpan.textContent = (typedValue * FEET_TO_METERS).toFixed(2);
                }
            } else {
                // Sørger for at verdien holder seg innenfor gyldig intervall i meter
                typedValue = Math.min(Math.max(typedValue, MIN_METERS), MAX_METERS);
                heightSlider.value = typedValue;
                heightInput.value = typedValue.toFixed(2);

                if (metersValueSpan && isPilot) {
                    metersValueSpan.textContent = typedValue.toFixed(2);
                }
            }
        });

        // Endring på slider → oppdater visningen
        heightSlider.addEventListener('input', updateHeightDisplay);

        // Bytte mellom meter ↔ fot (kun for piloter)
        function toggleUnit() {
            if (!isPilot) return;

            const metersValueCurrent = parseFloat(heightInput.value) || MIN_METERS;

            if (currentUnit === 'meters') {
                // Bytter fra meter → fot
                currentUnit = 'feet';
                const feetValue = metersValueCurrent * METERS_TO_FEET;

                heightSlider.min = MIN_FEET.toFixed(0);
                heightSlider.max = MAX_FEET.toFixed(0);
                heightSlider.step = "1";
                heightSlider.value = Math.round(feetValue);

                currentUnitSpan.textContent = "Feet";
                minLabel.textContent = `${MIN_FEET.toFixed(0)} ft (Min)`;
                maxLabel.textContent = `${MAX_FEET.toFixed(0)} ft (Max)`;
            }
            else {
                // Bytter fra fot → meter
                currentUnit = 'meters';

                heightSlider.min = MIN_METERS.toFixed(1);
                heightSlider.max = MAX_METERS.toFixed(1);
                heightSlider.step = "0.5";
                heightSlider.value = metersValueCurrent.toFixed(1);

                currentUnitSpan.textContent = "Meters";
                minLabel.textContent = `${MIN_METERS.toFixed(0)} m (Min)`;
                maxLabel.textContent = `${MAX_METERS.toFixed(0)} m (Max)`;
            }

            updateHeightDisplay();
        }

        if (unitToggle && isPilot) {
            unitToggle.addEventListener('click', (e) => {
                e.preventDefault();
                toggleUnit();
            });
        }

        // Initierer visning ved sideinnlasting
        updateHeightDisplay();
    </script>

}
